<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1><img src="../../images/The_Avengers_Movie_Banner__Two_by_Marvel_Freshman.jpg"  width="800px" height="100px" />
                <img src="../../images/iron_man_2_movie-normal.jpg" width="194px" height="100px"/></h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu" >
                    @Html.MvcSiteMap().Menu(false, true, true)
                </ul>
            </nav>
        </header>
        <section id="main" style="background-image:url('../images/plain-brown.jpg');">
            @Html.MvcSiteMap().SiteMapPath()
            @RenderBody()
        </section>
        <footer style="background-image:url('../images/plain-brown.jpg');">
        </footer>
    </div>
</body>
</html>
