@{
    
    string userName = "";
    string otherLink = "";
    string registerLink = "";
    string userRole = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />  -->
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/datepicker/js/bootstrap-datepicker.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/datepicker/css/datepicker.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/bootstrap/plugins/js/bootstrap-transition.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/plugins/js/bootstrap-carousel.js")" type="text/javascript"></script>
    
    <!-- Add fancyBox -->
    <link rel="stylesheet" href="@Url.Content("~/Content/fancyapps/source/jquery.fancybox.css?v=2.0.6")" type="text/css" media="screen" />
    <script type="text/javascript" src="@Url.Content("~/Content/fancyapps/source/jquery.fancybox.pack.js?v=2.0.6")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/fancyapps/source/helpers/jquery.fancybox-media.js?v=1.0.0")"></script>
    <link href="@Url.Content("~/Content/booking.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a class="brand pull-left" href="#"> ISS Theatre </a> </li>
                        <li><a href="/"><i class="icon-home"></i>Home </a></li>
                        <li><a href="#"><i class="icon-film"></i>Movies </a></li>
                        <li><a href="#"><i class="icon-film"></i>Cinemas </a></li>
                        <li><a href="#"><i class="icon-music"></i>Promotions </a></li>
                        <li class="dropdown" id="menu1"><a class="dropdown-toggle" data-toggle="dropdown"
                            href="#"><i class="icon-shopping-cart"></i>Buy Tickets <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Search", "Movie")">Buy </a></li>
                                <li><a href="@Url.Action("Get", "MovieBooking")"> Booking History </a></li>
                            </ul>
                        </li>
                         @if (User.IsInRole("admin"))
                         {

                        <li class="dropdown" id="menu2"><a class="dropdown-toggle" data-toggle="dropdown"
                            href="#"><i class="icon-film"></i>Admin <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-thumbs-up"></i>Movie Maintenance</a></li>
                                <li><a href="#"><i class="icon-thumbs-up"></i>Hall Maintenance </a></li>
                                <li><a href="#"><i class="icon-thumbs-up"></i>Theatre Maintenance </a></li>
                            </ul>
                        </li>
                             }
                        @{
                            userName = (Request.IsAuthenticated) ? @User.Identity.Name : "User";
                        }
                        <li class="dropdown" id="menu3"><a class="dropdown-toggle" data-toggle="dropdown"
                            href="#"><i class="icon-user"></i>@userName <b class="caret"></b></a>
                            <ul class="dropdown-menu pull-right">
                                @if (Request.IsAuthenticated)
                                {
                                    userName = (Request.IsAuthenticated) ? @User.Identity.Name : "User";
                                    <li><a href="@Url.Action("ChangePassword", "Account")"><i class="icon-wrench"></i>Change
                                        Password </a></li>
                                    <li><a href="@Url.Action("LogOff", "Account")"><i class="icon-off"></i>LogOff </a>
                                    </li>
                                                                           
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Register", "Account")">Register </a></li>
                                    <li><a href="@Url.Action("LogOn", "Account")">LogOn </a></li>
                                }
                            </ul>
                        </li>
                        @*     <li class="dropdown" id="menu3"><a class="dropdown-toggle" data-toggle="dropdown"
                            href="#"> <i class="icon-user"></i> @userName <b class="caret"></b></a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="@Url.Action(@otherLink, "Account")"> @otherLink </a></li>
                                <!-- <li><a href="@Url.Action("LogOff", "Account")"> <i class="icon-off"></i> LogOff </a></li> -->
                            </ul>
                        </li>*@
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span2">
                
            </div>
            <div class="span8">
                <div class='clearfix'>
                </div>
                <div class='clearfix'>
                </div>
                @RenderBody()
            </div>
            <div class="span2">
            </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('.date').datepicker
            ({
                dateFormat: 'dd/mm/yy',
                showStatus: true,
                showWeeks: true,
                highlightWeek: true,
                numberOfMonths: 1,
                showAnim: "scale",
                showOptions: {
                    origin: ["top", "left"]
                }
            });
                });
            </script>
        </div>
        <!--
    <div class="page">
    <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

        <header>
    
        <footer>
        </footer>
            -->
    </div>
</body>
</html>
