@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-unit">
  <h1>Golden Village</h1>
  <p>Books tickets easily as u would have never imagined</p>
  <p>
  </p>
</div>

<div class="well">
<div class="page-header">
<h1>
    Search</h1>
    </div>
@using (Html.BeginForm())
{
    <table style="width: 100%;">
        <tr>
            <td>
                Select Theatre
            </td>
            <td>
                @Html.DropDownList("theatre_select", (IEnumerable<SelectListItem>)ViewBag.theatreList)
                @*<select id="theatre_select" name="theatre_select">
                
                  @foreach (var theatre in @ViewBag.theatreList)
                  {
                     <option> @theatre.Name </option>
                  }
                *@
                
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Select Movie
            </td>
            <td>
                @Html.DropDownList("movie_select", (IEnumerable<SelectListItem>)ViewBag.movieList)
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                Choose a Day
            </td>
            <td>
                @Html.TextBox("day_select", "22/02/2012", new { @class = "date" })
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
        <tr>
            <td>
                &nbsp;
            </td>
            <td>
                <input type="submit" value="Go" class='btn btn-primary large'  />
            </td>
            <td>
                &nbsp;
            </td>
        </tr>
    </table>
}

</div>